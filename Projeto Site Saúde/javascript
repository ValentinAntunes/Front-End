// Sample data for demonstration
const dailyActivityMinutes = 30;
const dailyDietCalories = 2000;
const weeklyActivityMinutes = 210;
const weeklyDietCalories = 14000;

// Update daily statistics
document.getElementById('daily-activity').innerText = `Activity: ${dailyActivityMinutes} mins`;
document.getElementById('daily-diet').innerText = `Diet: ${dailyDietCalories} kcal`;

// Update weekly statistics
document.getElementById('weekly-activity').innerText = `Activity: ${weeklyActivityMinutes} mins`;
document.getElementById('weekly-diet').innerText = `Diet: ${weeklyDietCalories} kcal`;
